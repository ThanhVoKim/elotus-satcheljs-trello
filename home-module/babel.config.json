{
	"presets": [
		[
			"@babel/preset-env",
			{
				"targets": {
					"node": true
				}
			}
		],
		[
			"@babel/preset-react",
			{
				"runtime": "automatic"
			}
		],
		"@babel/preset-typescript"
	],
	"plugins": [
		[
			"@babel/plugin-proposal-decorators",
			{ "version": "2021-12", "decoratorsBeforeExport": true }
		],
		[
			"@babel/plugin-transform-runtime",
			{
				"useESModules": true,
				"regenerator": false
			}
		]
	],
	"env": {
		"test": {
			"presets": [
				[
					"@babel/preset-env",
					{
						"targets": "current node"
					}
				]
			]
		}
	}
}
